<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">


    <TextView
        android:id="@+id/change_name_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-condensed"
        android:gravity="top|center_horizontal"
        android:text="@string/change_name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/new_name_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/change_name_title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="@string/new_username"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/change_usrnm_err_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/invalid_first_name"
        android:textColor="@color/unverified_red"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/submit_new_name_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/new_name_edittext"
            android:layout_below="@+id/new_name_edittext"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/round_blue_popup_btn"
            android:text="@string/submit"
            android:textColor="@color/dark_blue"
            android:textStyle="bold" />

        <Button
            android:id="@+id/new_name_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/submit_new_name_btn"
            android:layout_alignBottom="@+id/submit_new_name_btn"
            android:layout_alignEnd="@+id/new_name_edittext"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/round_neutral_popup_btn"
            android:text="@string/cancel"
            android:textColor="@color/dark_grey"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>


