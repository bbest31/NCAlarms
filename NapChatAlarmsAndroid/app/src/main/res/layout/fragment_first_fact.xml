<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        app:cardBackgroundColor="@color/off_white"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp"
        app:contentPadding="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/fact_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/fact_citation"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="156dp"
                android:text="@string/descrip"
                android:textAlignment="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_editor_absoluteY="262dp" />

            <TextView
                android:id="@+id/fact_citation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/dyk_text"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="70dp"
                android:text="@string/citation"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/dyk_yes_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/dyk_no_btn"
                android:layout_alignBottom="@+id/dyk_no_btn"
                android:layout_marginEnd="22dp"
                android:layout_toStartOf="@+id/dyk_no_btn"
                android:background="@drawable/round_blue_popup_btn"
                android:text="@string/dyk_yes"
                android:fontFamily="@font/fredoka_one"
                android:textColor="@color/dark_blue"
                tools:layout_editor_absoluteX="103dp"
                tools:layout_editor_absoluteY="456dp" />

            <Button
                android:id="@+id/dyk_no_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="71dp"
                android:background="@drawable/round_neutral_popup_btn"
                android:text="@string/dyk_no"
                android:fontFamily="@font/fredoka_one"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="213dp"
                tools:layout_editor_absoluteY="456dp" />

            <TextView
                android:id="@+id/dyk_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/dyk_yes_btn"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="14dp"
                android:text="@string/dyk"
                android:textColor="@color/dark_grey" />



            <ImageView
                android:id="@+id/next_indicator_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_chevron_sign_to_right" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>