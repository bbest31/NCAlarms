<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_gradient"
    android:gravity="top"
    android:isScrollContainer="true"
    android:orientation="vertical"
    tools:context="com.napchatalarms.napchatalarmsandroid.activities.CreateAlarmActivity">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:background="@color/off_white"
                app:cardCornerRadius="20dp"
                app:cardElevation="1dp"
                app:contentPadding="10dp">

                <TimePicker
                    android:id="@+id/timePicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blood_orange"
                    android:elevation="1dp"
                    android:headerBackground="@android:color/transparent"
                    android:numbersSelectorColor="@color/main_amber"
                    android:numbersTextColor="@color/black"
                    android:theme="@style/TimePickerTheme" />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@color/off_white"
                app:cardCornerRadius="20dp"
                app:cardElevation="1dp"
                app:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/vibrate_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/fredoka_one"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="@string/vibrate"
                        android:textAlignment="textStart"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/ringtone_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/fredoka_one"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="@string/ringtone"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/repeat_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/fredoka_one"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="@string/repeat"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/snooze_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/fredoka_one"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="@string/snooze"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/attach_contacts_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/fredoka_one"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="@string/attach_notification"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:visibility="gone" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/edit_alarm_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/fab_blue_norm"
            android:fontFamily="@font/fredoka_one"
            android:text="@android:string/ok"
            android:textColor="@color/white"
            android:visibility="gone" />

        <Button
            android:id="@+id/create_alarm_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/fab_blue_norm"
            android:fontFamily="@font/fredoka_one"
            android:text="@string/create"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
