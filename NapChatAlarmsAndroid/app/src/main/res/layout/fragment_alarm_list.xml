<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.napchatalarms.napchatalarmsandroid.activities.AlarmListFragment">

    <Button
        android:id="@+id/add_alarm_btn"
        android:layout_width="47dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/ic_action_name"
         />


    <com.baoyz.swipemenulistview.SwipeMenuListView
            android:id="@+id/alarm_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nestedScrollingEnabled="true"
            tools:listitem="@layout/alarm_layout"></com.baoyz.swipemenulistview.SwipeMenuListView>


</LinearLayout>
