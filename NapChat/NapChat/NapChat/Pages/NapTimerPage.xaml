             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NapChat.Pages.NapTimerPage"
             BackgroundColor="Lavender">
    <ContentPage.Content>
        <ScrollView VerticalOptions="FillAndExpand">
            <ScrollView.Content>
                <StackLayout>
            <Button Text="Cancel" BackgroundColor="Red" BorderColor="Red" TextColor="White"
