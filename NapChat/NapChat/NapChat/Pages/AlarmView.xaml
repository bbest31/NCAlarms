<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NapChat.Pages.AlarmView"
             Padding="10dp">
    <ContentPage.Content>
        <StackLayout>
            <Label Text = "{Binding TimeDisplayText}" />
            <Button Text="Snooze" BackgroundColor="Blue" TextColor="White"
                    HorizontalOptions="Center"/>
            <Button Text="Dismiss" BackgroundColor="Blue" TextColor="White"
                    HorizontalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>