<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NapChat.LoginPage"
  BackgroundColor="Purple">
  
  <StackLayout>
    
    <Image Source="Naptimebtn_Icon.png" IsVisible="True" />
     <Label
    Text="Welcome to NapChat"
    VerticalOptions="Center"
    HorizontalOptions="Center"
    FontAttributes="Bold"
    TextColor="White"/>
    
    <Entry Placeholder="Username" HorizontalOptions="Center"/>
    <Entry Placeholder="Password" HorizontalOptions="Center"/>
    
   
    
  </StackLayout>
  
</ContentPage>